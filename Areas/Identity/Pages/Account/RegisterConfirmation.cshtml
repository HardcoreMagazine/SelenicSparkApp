@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
<hr />
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Our service currently does not have a real email sender registered.
        </p>
        <p>
            Normally this would be emailed to you:
            <a id="confirm-link" href="@Model.EmailConfirmationUrl">click here to confirm your email</a>
        </p>
    }
    else
    {
        <p> Please check your email to confirm your account </p>
    }
}

