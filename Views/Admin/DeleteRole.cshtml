@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

@model IdentityRole
@{
    ViewData["Title"] = "Delete role";
}

@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin")) // Triple-checking never hurt anyone
    {
        <h1>Deleting role</h1>
        <h3>Are you sure you want to delete this role?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">ID</dt>
                <dd class="col-sm-10">@Model.Id</dd>

                <dt class="col-sm-2">Role Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
            </dl>
            <form asp-action="DeleteRole">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Roles" class="btn btn-primary">I've changed my mind...</a>
            </form>
        </div>
    }
}
