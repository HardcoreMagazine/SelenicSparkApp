@using Microsoft.AspNetCore.Identity
@using System.Text.RegularExpressions;

@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<SelenicSparkApp.Models.Post>
@{
    ViewData["Title"] = "All";
}

<link rel="stylesheet" href="~/css/PostIndex.css" />

@if (SignInManager.IsSignedIn(User))
{
    <p style="text-align:center">
        <a asp-action="Create" class="btn btn-primary w-25">
            Post something...
        </a>
    </p>
}
@if (Model?.Count() > 0)
{
    <div>
        @foreach (var post in Model)
        {
            <div class="post-container">
                <div class="padding-all-10">
                    <div>
                        <a asp-action="Details" asp-route-id="@post.PostId">@post.Title</a>
                        <br>
                        @if (!string.IsNullOrWhiteSpace(post.Text))
                        {
                            <p class="post-text">@post.Text</p>
                        }
                    </div>
                    <div class="sm-text">
                        <i>@post.Author at @post.CreatedDate.ToString("HH:mm dd.MM.yyyy")</i>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h4 style="text-align:center">
        No posts available!
    </h4>
}
